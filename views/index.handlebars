<div align="center"><h1>Burger World</h1></div>
<div align="center"><h2>Burgers you need to eat!</h2></div>
<table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Action</th>
      <th>Throw it</th>
    </tr>
  {{#each burgers}}
    {{#unless devoured}}
    <tr>
      {{> burgers/burger-block devoured=true}}
    </tr>
    {{/unless}}
  {{/each}}
</table>
<div align="center"><h2>Burgers that have been devoured!</h2></div>
<table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Action</th>
      <th>Throw it</th>
    </tr>
  {{#each burgers}}
    {{#if devoured}}
    <tr>
      {{> burgers/burger-block devoured=false}}
    </tr>
    {{/if}}
  {{/each}}
</table>
<div align="center"><h2>Add a Burger</h2></div>
<div>
  <form class="create-form">

    <div class="form-group hdrDiv" align="center">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
      <div align="center">
      <label for="devoured">Eat em</label>
      </div>
      <input type="radio" name="devoured" class="formatText" value="1" checked> devoured!<br>
      <input type="radio" name="devoured" class="formatText" value="0"> not devoured
    </div>
  <div align="center">
    <button type="submit">Add Burger</button>
  </div>
  </form>
</div>